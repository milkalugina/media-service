      <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody class="all_post_body">
    <h2>Все категории</h2>
    <% Category.all.each do |cat| %>
    <%= link_to cat.name, posts_path(category: cat.name) %> <br>
    <% end %>
    <br>

    <h2>Новости</h2>
    <% @posts.each do |post| %>
      <tr class="post_body">

        <div class="image">
          <td class="img"><%= image_tag post.image.url if post.image? %></td>
        </div>

        <div class="text_body">

          <div class="tag_body">
            <td class="tag"><a><%= post.name %></a></td>
          </div>

          <td><%= post.category.name %></td>

          <td class="title"><%= post.title %></td>

          <td><%= post.content.html_safe %></td>

          <!-- <div class="date_editing">
            <td class="date"><%= post.date %> <br> <%= link_to 'show', post %> <br><%= link_to 'edit', edit_post_path(post) %> <br><%= link_to 'destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div> -->

          <td><%= link_to 'Show', post %></td>
          <br>

          <td><%= link_to 'Edit', edit_post_path(post) %></td>
          <br>

          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>

        </div>
      </tr>
    <% end %>
  </tbody>
</table>

