
<div class="formnews">
  <%= form_with(model: post, local: true) do |form| %>
    <% if post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2>Новость</h2>
    <p>Заполните форму новости внимательно и аккуратно.</p>

    <div class="title">
      <%= form.label "Заголовок" %>
      <%= form.text_field :title %>
    </div>

    <div class="sphere">
      <%= form.label "Сфера волонтерства" %>
      <%= form.select :category_id, Category.pluck(:name, :id)%>
    </div>

    <div class="content">
        <%= form.label "Контент" %>
        <%= form.cktext_area :content %>
      </div>

      <div class="image">
        <%= form.label "Фотография" %>
        <%= form.file_field :image %>
      </div>

    <div class="date">
  	<%= form.label :date %>
  	<%= form.text_field :date %>
  </div>

  <div class="name">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

    <div class="actions">
      <%= form.submit "Разместить" %>
    </div>
  <% end %>
</div>
