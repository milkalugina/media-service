
<div class="registration">
<img src="/images/sign_in2.png" alt="">
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="accountlogin">
  <h2>Добро пожаловать!</h2>
  <div class="subtitle">
    <h3>Войдите в свой аккаунт</h3>
  </div>
  <div class="email">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail"  %>
  </div>
  <div class="password">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Пароль"  %>
  </div>

  <div class="login">
    <%= f.submit "Зайти" %>
  </div>

</div>
<% end %>

<div>
    <%= react_component 'S_Footer' %>
</div>
